<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfilePic"
        android:layout_above="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/tvAuthor"
        android:layout_toRightOf="@+id/ivProfilePic"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:paddingRight="10dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:layout_below="@+id/tvAuthor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp"
        android:background="@android:color/transparent"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLike"
        android:layout_above="@+id/tvCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/heart2a_blue_200"
        android:maxHeight="5dp"
        android:maxWidth="5dp"
        android:minHeight="5dp"
        android:minWidth="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_toLeftOf="@+id/tvAuthor"
        android:layout_toStartOf="@+id/tvAuthor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes count"
        android:id="@+id/tvLikes"
        android:layout_toRightOf="@+id/ivLike"
        android:layout_below="@+id/ivPhoto"
        android:textSize="15sp"
        android:width="200dp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:gravity="bottom"
        android:paddingLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments"
        android:id="@+id/tvCommentsCount"
        android:textSize="15sp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="bottom"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:id="@+id/tvCaption"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</RelativeLayout>